@model Application.DataTransfer.AutomobilDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@if (TempData["error"] != null)
{
    <h4>@TempData["error"]</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" placeholder="$" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godiste" class="control-label"></label>
                <input asp-for="Godiste" class="form-control" />
                <span asp-validation-for="Godiste" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Vlasnik" /> @Html.DisplayNameFor(model => model.Vlasnik)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MarkaAutomobila" class="control-label"></label>
                <input asp-for="MarkaAutomobila" class="form-control" />
                <span asp-validation-for="MarkaAutomobila" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tip" class="control-label"></label>
                <input asp-for="Tip" class="form-control" />
                <span asp-validation-for="Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorija" class="control-label"></label>
                <input asp-for="Kategorija" class="form-control" />
                <span asp-validation-for="Kategorija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrstaGoriva" class="control-label"></label>
                <input asp-for="VrstaGoriva" class="form-control" />
                <span asp-validation-for="VrstaGoriva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(x => x.Id)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

